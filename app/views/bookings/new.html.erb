<div class="container py-5">
  <div class="row">
    <div class="col-12 col-md-6 offset-lg-3">
      <div class="bg-white rounded p-3 shadow">
        <h3 style="justify-content: center">Your Booking</h3>
        <%= simple_form_for [@game, @booking] do |f| %>
          <div style="display: flex; justify-content: center">
          <%= f.input :start_date, as: :string, label: "Rent Dates", required: false, input_html: {id: "range_start", class: "datepicker"} %>
          <%= f.input :end_date, as: :string, required: false, input_html: {id: "range_end", class: "datepicker"} %>
          </div>
          <%= f.button :submit, "Go", class: "btn btn-primary" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
