<div class="container mt-4">
  <div class="d-flex flex-column align-items-center justify-content-center">

    <div class="mt-4">
    <%= simple_form_for @game do |f| %>
        <h3><%= @text %></h3>


      <div class="form-inputs">
        <%= f.input :category, collection: Game::CATEGORIES ,
                      required: true,
                      autofocus: true,
                      input_html: { autocomplete: "The category of your game" }%>
        <%= f.input :address,
                      required: true,
                      autofocus: true,
                      input_html: { autocomplete: "Your address" }%>
        <%= f.input :description,
                    required: true,
                    autofocus: true,
                    input_html: { autocomplete: "The description of your game" }%>
        <%= f.input :price,
                    required: true,
                    input_html: { autocomplete: "The price of your game" }%>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Add your game", class: "btn btn-primary rounded-pill" %>
      </div>
    <% end %>

    </div>

  </div>

</div>
