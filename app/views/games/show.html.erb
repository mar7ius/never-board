<div class="container mt-4">

  <div class="d-flex justify-content-between">

    <% if policy(@game).update? %>
      <%= link_to 'Edit', edit_game_path, class: "btn btn-outline-success px-4"%>
    <% end %>

    <% if policy(@game).destroy? %>
      <%= link_to 'Delete', game_path, method: :delete, data: { confirm: "Are you sure ?"}, class: "btn btn-outline-danger px-4" %>
    <% end %>
  </div>

  <div class="game-header mt-4">
    <div class="game-title">
    <h2><%= @game.category %></h2>
    <h6><%= @game.address %></h6>
    </div>
  <h5 class="gc-price"><i class="fas fa-euro-sign"></i><%= @game.price %>/jours</h5>
  </div>

  <div class="images-box mt-4">
    <div class="img-principal p-2 flex-grow-1" style="background-image: linear-gradient(rgba(0,0,0,0.1), rgba(0,0,0,0.2)), url(<%= cl_image_path @game.photos.first.key %>);"></div>
    <div class="img-sup-2 p-2 flex-grow-1" style="background-image: linear-gradient(rgba(0,0,0,0.1), rgba(0,0,0,0.2)), url(<%= cl_image_path @game.photos.last.key %>); background-size: cover;"></div>
    <%# <div class="img-sup-2 p-2 flex-grow-1" style="background-image: linear-gradient(rgba(0,0,0,0.1), rgba(0,0,0,0.2)), url( cl_image_path @game.photos[1].key); background-size: cover;"></div> %>
  </div>

  <div class="container mt-5">
  <h2>Description:</h2>
  <p><%= @game.description %></p>
  </div>

  <div class="container py-5">
  <div class="row">
    <div class="col-12 col-md-6 offset-lg-3">
      <div class="bg-white rounded p-3 shadow">
        <h3 style="justify-content: center">Your Booking <i class="fas fa-gamepad"></i></h3>
        <%= simple_form_for [@game, @booking] do |f| %>
          <div style="display: flex; justify-content: center">
          <%= f.input :start_date, as: :string, label: "When you'll start to play", placeholder: 'jj/mm/yyyy', required: false, input_html: {id: "range_start", class: "datepicker"} %>
          <%= f.input :end_date, as: :string, label: "When you'll return the machine", placeholder: 'jj/mm/yyyy', required: false, input_html: {id: "range_end", class: "datepicker"} %>
          </div>
          <%= f.button :submit, "Let's Play", class: "btn btn-primary" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
  </div>



  </div>




    </div>

  </div>
</div>


<%= render "map", marker: @marker %>
