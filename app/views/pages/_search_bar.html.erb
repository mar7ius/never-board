<%= form_tag games_path, method: :get do %>
  <%= text_field_tag :category,
    params[:category],
    class: "form-control",
    placeholder: "Find a game"
  %>
  <%= text_field_tag :address,
    params[:address],
    class: "form-control",
    id: 'game_address',
    placeholder: "Type your address"
  %>
  <%= submit_tag "Search", class: "btn btn-primary" %>
<% end %>
