
<div class="container mt-4 justify-content-center ">
<div class="container d-flex ">
<i class="fas fa-digital-tachograph"></i>
<h2>Dashboard</h2>
</div>

<div class="container text-center">
<i class="fas fa-gamepad"></i>
<h2>Your games</h2>
<i class="fas fa-gamepad"></i>
</div>

  <div class="d-flex ">

    <div class="cards">
        <% @games.each do |game| %>
          <div class="game-header mt-4">

            <div class="game-title">
              <h2><%= game.category %></h2>
              <h5 class="gc-price"><i class="fas fa-euro-sign"></i><%= game.price %>/day</h5>
              <div class="images-box mt-4">
                <div class="img-principal p-2 flex-grow-1" style="background-image: linear-gradient(rgba(0,0,0,0.1), rgba(0,0,0,0.2)), url(<%= cl_image_path game.photos.first.key %>);">
                </div>
              </div>
            </div>
          </div>

        <% end %>
    </div>
  </div>
</div>

<div class="container text-center mt-4">
  <p class="bg-light border mt-2"></p>
</div>

<div class="container text-center mt-4">
<h2>Your bookings</h2>
</div>

<div class="container text-center mt-4">
<h2>Bookings you made</h2>
</div>
  <div class="d-flex justify-content-center">

    <div class="cards">
        <% @bookings_i_made.each do |booking| %>
        <div class="booking-header mt-4">
           <div class="booking-title">
              <h2><%= booking.game.category %></h2>
                <h3><%= booking.status %></h3>
              <h5 class="gc-price"><i class="fas fa-euro-sign"></i><%= booking.game.price %>/day</h5>
               <div class="images-box mt-4">
                <div class="img-principal p-2 flex-grow-1" style="background-image: linear-gradient(rgba(0,0,0,0.1), rgba(0,0,0,0.2)), url(<%= cl_image_path booking.game.photos.first.key %>);">
                </div>
              </div>
            </div>
        </div>
        <% end %>
    </div>
    </div>

  <div class="container text-center mt-4">
   <p class="bg-light border mt-2"></p>
<h2>Bookings of your game</h2>
</div>
    <div class="d-flex justify-content-center">

    <div class="cards">
        <% @bookings_for_my_games.each do |booking| %>
        <div class="booking-header mt-4">
           <div class="booking-title">
              <h2><%= booking.game.category %></h2>
               <h3><%= booking.status %></h3>
              <h5 class="gc-price"><i class="fas fa-euro-sign"></i><%= booking.game.price %>/day</h5>
               <div class="images-box mt-4">
                <div class="img-principal p-2 flex-grow-1" style="background-image: linear-gradient(rgba(0,0,0,0.1), rgba(0,0,0,0.2)), url(<%= cl_image_path booking.game.photos.first.key %>);">
                </div>
              </div>
          </div>
        </div>
        <% end %>
    </div>

  </div>
</div>
