<div class="row justify-content-center" data-controller="date-price">
  <div class="col-12 col-md-6">
      <div class="bg-dark rounded p-3 shadow">
        <h3>Let's book this game ! <i class="fas fa-gamepad"></i></h3>
          <%= simple_form_for [@game, @booking] do |f| %>
        <div style="display: flex; justify-content: center">
          <%= f.input :start_date, as: :string, label: "When you'll start to play", placeholder: 'jj/mm/yyyy', required: false, input_html: {id: "range_start", class: "datepicker", data: {action:"change->date-price#update"}} %>
          <%= f.input :end_date, as: :string, label: "When you'll return the machine", placeholder: 'jj/mm/yyyy', required: false, input_html: {id: "range_end", class: "datepicker"} %>
        </div>
        <%= f.button :submit, "Pay #{}" , class: "btn btn-primary" %>
        <p>Total price: <span data-date-price-target="total">0</span>â‚¬</p>
          <% end %>
      </div>
    </div>
  </div>
</div>
