<% @games.each do |game| %>
<%= link_to game_path(game) do %>

  <div class="game-card">

      <div class="gc-photos" style="background-image: linear-gradient(rgba(0,0,0,0.1), rgba(0,0,0,0.2)), url(<%= cl_image_path game.photos.first.key %>); background-size: cover;">
        <span class="gc-price"><i class="fas fa-euro-sign"></i><%if game.price - game.price.round == 0%>
        <%=game.price.round %>
        <%end%></span>
      </div>
      <div class="gc-content">
        <div class="gc-left-txt">
          <span class="gc-title"><%= game.category %></span>
          <span class="gc-address"><i class="fas fa-map-marker-alt"> </i> <%= game.address %></span>
        </div>
      </div>
    </div>
<% end  %>
<% end %>
